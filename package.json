{
  "name": "solutionsedge-blog",
  "version": "1.0.0",
  "private": false,
  "license": "MPL-2.0",
  "author": "Alexander Cedergren",
  "description": "The Solutions Edge - A technical blog focusing on cloud computing, edge technologies, and solutions engineering",
  "scripts": {
    "dev": "vite dev",
    "build": "npm run process-videos || true && vite build",
    "build:prod": "npm run process-videos || true && vite build --config vite.config.production.ts",
    "build:analyze": "ANALYZE=true vite build --config vite.config.analyze.ts",
    "build:perf": "node scripts/build-performance-monitor.js",
    "build:prerender-perf": "ANALYZE_PRERENDER=true vite build --config vite.config.ts",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "process-videos": "node scripts/process-videos.js",
    "deploy": "./scripts/deploy-linode-enhanced.sh",
    "deploy:original": "./scripts/deploy-linode.sh",
    "tree-shake:analyze": "node scripts/analyze-tree-shaking.js",
    "arch:analyze": "node scripts/architectural-analysis.js",
    "code:quality": "node scripts/code-quality-analyzer.js",
    "ts:safety": "node scripts/typescript-safety-analyzer.js",
    "security:analyze": "node scripts/security-analyzer.js",
    "perf:analyze": "npm run build:perf && npm run build:analyze",
    "perf:report": "node scripts/generate-performance-report.js",
    "perf:full": "npm run build:perf && npm run build:prerender-perf && npm run tree-shake:analyze && npm run perf:report",
    "analyze:full": "npm run arch:analyze && npm run code:quality && npm run ts:safety && npm run security:analyze && npm run tree-shake:analyze",
    "assess:comprehensive": "npm run analyze:full && node scripts/comprehensive-assessment.js",
    "dev:edge": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "dev:server": "cd dev-server && npm install && npm run dev",
    "test:edge": "cd dev-server && npm test",
    "build:edge": "cd edgeworkers/auth-gateway && npm run build",
    "build:search": "node scripts/build-search-index.js",
    "build:search-edge": "cd edgeworkers/search-service && npm run build",
    "build:all-edge": "npm run build:edge && npm run build:search-edge && npm run build:search"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/node": "^20.10.0",
    "acorn": "^8.11.0",
    "acorn-walk": "^8.3.0",
    "autoprefixer": "^10.4.16",
    "lightningcss": "^1.22.0",
    "postcss": "^8.4.32",
    "rollup-plugin-visualizer": "^5.12.0",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vite-plugin-compression2": "^0.11.0",
    "vite-plugin-image-optimizer": "^1.1.7",
    "concurrently": "^8.2.2"
  },
  "type": "module",
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/marked": "^5.0.2",
    "@types/quill": "^2.0.14",
    "fluent-ffmpeg": "^2.1.3",
    "marked": "^15.0.12",
    "quill": "^2.0.3"
  }
}
