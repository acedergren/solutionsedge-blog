{
	"name": "solutionsedge-sveltekit",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "./scripts/deploy-linode.sh",
		"clean": "rm -rf build .svelte-kit",
		"git:auto": "node scripts/auto-commit.js",
		"git:commit": "./scripts/git-auto-commit.sh",
		"git:watch": "./scripts/watch-and-commit.sh start",
		"git:watch:daemon": "./scripts/watch-and-commit.sh daemon",
		"git:watch:stop": "./scripts/watch-and-commit.sh stop",
		"git:watch:status": "./scripts/watch-and-commit.sh status"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/typography": "^0.5.16",
		"autoprefixer": "^10.4.21",
		"mdsvex": "^0.12.6",
		"postcss": "^8.5.4",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-slug": "^6.0.0",
		"shiki": "^3.5.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.8",
		"typescript": "^5.0.0",
		"vite": "^6.2.6"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.1.8",
		"date-fns": "^4.1.0",
		"gray-matter": "^4.0.3",
		"marked": "^15.0.12"
	}
}
