# Local Development Environment Variables
# Copy this file to .env and fill in your values

# GitHub OAuth App (create at https://github.com/settings/developers)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Local development settings
PORT=3001
HOST=localhost
PROTOCOL=http

# Static site server (your SvelteKit dev server)
STATIC_SITE_URL=http://localhost:5173

# GitHub repository settings
GITHUB_REPO_OWNER=acedergren
GITHUB_REPO_NAME=solutionsedge-blog
ALLOWED_EMAIL=alex@solutionsedge.io

# Session settings
SESSION_TTL=86400
STATE_TTL=600

# Development mode (enables debugging)
DEV_MODE=true